<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:fillViewport="true"
    tools:context=".fragment.home.settings.others.EventFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/layout_advertisement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:background="#000">

            <ImageView
                android:id="@+id/image_advertisement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/background_selected"/>

            <VideoView
                android:id="@+id/video_advertisement"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/btn_exit_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textColor="#FFF"
                android:layout_alignParentEnd="true"
                android:layout_margin="20sp"
                android:textSize="50sp"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/arrow_back"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_margin="20sp"
                android:src="@drawable/drawable_arrow_back"/>

            <ImageView
                android:id="@+id/image_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/background_selected"/>

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="FATIMA MERCY A ONRUBIA"/>

            <TextView
                android:id="@+id/text_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:textSize="18sp"
                android:text="username"/>

            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:textSize="18sp"
                android:text="username"/>

            <TextView
                android:id="@+id/text_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:textSize="18sp"
                android:text="username"/>

            <TextView
                android:id="@+id/text_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:textSize="18sp"
                android:text="username"/>

            <TextView
                android:id="@+id/text_open_until"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:textSize="18sp"
                android:text="username"/>

            <Button
                android:id="@+id/btn_donate"
                android:layout_width="80sp"
                android:layout_height="40sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/background_selected"
                android:text="Donate"
                android:layout_gravity="center"
                android:textColor="#FFF"/>

            <LinearLayout
                android:id="@+id/view_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="username"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="username"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="username"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="username"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="username"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>