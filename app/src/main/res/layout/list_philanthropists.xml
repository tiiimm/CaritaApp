<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_marginStart="20sp"
    android:layout_marginEnd="20sp" android:id="@+id/parent_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_philanthropist"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:paddingEnd="20sp"
            android:gravity="start|center"
            android:src="@drawable/drawable_home"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start|center">

            <TextView
                android:id="@+id/text_philanthropist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:layout_marginTop="10sp"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_philanthropist_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="Address"/>

            <TextView
                android:id="@+id/text_philanthropist_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10sp"
                android:text="Points"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/drawable_long_line"/>

</LinearLayout>