<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    tools:context=".fragment.CharitySetUp1Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".20"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="40sp"
                    android:layout_height="0px"
                    android:layout_marginTop="54sp"
                    android:layout_marginBottom="10sp"
                    android:layout_weight=".7">

                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/background_current_step"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:text="1"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight=".3"
                    android:layout_marginBottom="14sp"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:text="Charity Info"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                android:background="@drawable/drawable_line"/>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="40sp"
                    android:layout_height="0px"
                    android:layout_marginTop="54sp"
                    android:layout_marginBottom="10sp"
                    android:layout_weight=".7">

                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/background_step"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:text="2"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight=".3"
                    android:layout_marginBottom="14sp"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:text="Charity Profile"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                android:background="@drawable/drawable_line"/>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="40sp"
                    android:layout_height="0px"
                    android:layout_marginTop="54sp"
                    android:layout_marginBottom="10sp"
                    android:layout_weight=".7">

                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/background_step"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:text="3"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight=".3"
                    android:layout_marginBottom="14sp"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:text="Bank Info"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".80"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="130sp"
                android:layout_height="130sp"
                android:layout_marginTop="10sp"
                android:src="@drawable/drawable_logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6sp"
                android:gravity="center"
                android:text="Set your charity's logo"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/background_textbox"
                android:hint="Charity Name"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/background_textbox"
                android:hint="Charity Address"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/background_textbox"
                android:hint="Charity Contact Number"/>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/background_button"
                android:text="NEXT"
                android:textColor="#FFF"/>

            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/background_button_back"
                android:text="BACK"
                android:textColor="#FFF"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>