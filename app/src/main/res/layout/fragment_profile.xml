<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".fragment.home.settings.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300sp">

            <LinearLayout
                android:id="@+id/view_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_charity_bio"
                    android:layout_width="match_parent"
                    android:layout_height="230sp"
                    android:visibility="gone"
                    android:src="@drawable/background_selected"/>

                <VideoView
                    android:id="@+id/video_charity_bio"
                    android:layout_width="match_parent"
                    android:layout_height="230sp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="140sp"
                android:layout_height="140sp"
                android:layout_below="@+id/view_bio"
                android:layout_marginTop="-70dp"
                android:layout_centerInParent="true"
                android:src="@drawable/drawable_home" />

            <ImageView
                android:id="@+id/arrow_back"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_margin="20sp"
                android:src="@drawable/drawable_arrow_back"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="FATIMA MERCY A ONRUBIA"/>

        <TextView
            android:id="@+id/text_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="username"/>

        <LinearLayout
            android:id="@+id/view_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textSize="18sp"
                android:text="username"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textSize="18sp"
                android:text="username"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:textSize="18sp"
                android:text="username"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textSize="18sp"
                android:text="username"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:textSize="18sp"
                android:text="username"/>

        </LinearLayout>

        <ImageView
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="5sp"
            android:src="@drawable/drawable_long_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/nav_profile_about"
                android:textColor="#FF00"
                android:layout_width="0px"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:text="About"/>

            <View
                android:id="@+id/divider2"
                android:layout_width="5sp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/nav_profile_achievements"
                android:layout_width="0px"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:text="Achievements"/>

            <View
                android:id="@+id/divider3"
                android:layout_width="5sp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/nav_profile_events"
                android:layout_width="0px"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:text="Events"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5sp"
            android:src="@drawable/drawable_long_line"/>

        <fragment
            android:id="@+id/fragment4"
            android:name="dreamers.caritaapp.fragment.home.settings.profile.ProfileAboutFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />]

    </LinearLayout>

</FrameLayout>