<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:fillViewport="true"
    tools:context=".fragment.home.settings.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/layout_advertisement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:background="#000">

            <ImageView
                android:id="@+id/image_advertisement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/background_selected"/>

            <VideoView
                android:id="@+id/video_advertisement"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/btn_exit_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textColor="#FFF"
                android:layout_alignParentEnd="true"
                android:layout_margin="20sp"
                android:textSize="50sp"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300sp">

                <LinearLayout
                    android:id="@+id/view_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image_charity_bio"
                        android:layout_width="match_parent"
                        android:layout_height="230sp"
                        android:visibility="gone"
                        android:src="@drawable/background_selected"/>

                    <VideoView
                        android:id="@+id/video_charity_bio"
                        android:layout_width="match_parent"
                        android:layout_height="230sp"/>

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_profile_picture"
                    android:layout_width="140sp"
                    android:layout_height="140sp"
                    android:layout_below="@+id/view_bio"
                    android:layout_marginTop="-70dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/drawable_home" />

                <ImageView
                    android:id="@+id/arrow_back"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_margin="20sp"
                    android:src="@drawable/drawable_arrow_back"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="FATIMA MERCY A ONRUBIA"/>

            <TextView
                android:id="@+id/text_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:textSize="18sp"
                android:text="username"/>

            <Button
                android:id="@+id/btn_donate"
                android:layout_width="80sp"
                android:layout_height="40sp"
                android:layout_marginTop="10sp"
                android:visibility="gone"
                android:background="@drawable/background_selected"
                android:text="Donate"
                android:layout_gravity="center"
                android:textColor="#FFF"/>

            <LinearLayout
                android:id="@+id/view_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="username"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="username"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="username"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="username"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="username"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_charity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="5sp"
                    android:src="@drawable/drawable_long_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/nav_profile_about"
                        android:textColor="#FF00"
                        android:layout_width="0px"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:text="About"/>

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="5sp"
                        android:layout_height="match_parent"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/nav_profile_achievements"
                        android:layout_width="0px"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:text="Achievements"/>

                    <View
                        android:id="@+id/divider3"
                        android:layout_width="5sp"
                        android:layout_height="match_parent"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/nav_profile_events"
                        android:layout_width="0px"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:text="Events"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5sp"
                    android:src="@drawable/drawable_long_line"/>

                <FrameLayout
                    android:id="@+id/fragment4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>