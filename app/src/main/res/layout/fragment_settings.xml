<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".fragment.home.SettingsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:paddingStart="20sp"
        android:paddingTop="20sp"
        android:text="SETTINGS"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight=".15"
        android:orientation="horizontal"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile_picture"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:paddingStart="20sp"
            android:src="@drawable/drawable_home"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:paddingStart="10sp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/text_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:text="username"
                android:textSize="20sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/btn_to_profile"
            android:layout_width="0px"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:textSize="80sp"
            android:paddingEnd="20sp"
            android:gravity="end"
            android:text=">"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/text_points"
            android:layout_width="0px"
            android:layout_weight=".4"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="20sp"
            android:text="Points: 100"/>

        <TextView
            android:layout_width="0px"
            android:layout_weight=".1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20sp"
            android:text="-"/>

        <TextView
            android:id="@+id/text_rank"
            android:layout_width="0px"
            android:layout_weight=".4"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="20sp"
            android:text="Rank: 50th"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Level: Good Samaritan"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight=".2"
        android:orientation="horizontal"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:gravity="center">

        <View
            android:layout_width="0px"
            android:layout_weight=".25"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn_achievements"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:src="@drawable/drawable_home"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Achievements"/>

        </LinearLayout>

        <View
            android:layout_width="0px"
            android:layout_weight=".25"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn_events"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:src="@drawable/drawable_home"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Events"/>

        </LinearLayout>

        <View
            android:layout_width="0px"
            android:layout_weight=".25"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight=".65"
        android:orientation="vertical"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:gravity="top|start">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:textSize="20sp"
            android:text="Change Password"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/drawable_long_line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:textSize="20sp"
            android:text="Edit Charity Details"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/drawable_long_line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:textSize="20sp"
            android:text="Edit Profile"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/drawable_long_line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:textSize="20sp"
            android:text="Deactivate Account"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/drawable_long_line"/>

    </LinearLayout>

</LinearLayout>